<% content_for :title, "#{@page_title} - Rails 8 Tutorial Blog" %>

<div class="admin-dashboard">
  
  <div class="dashboard-header">
    <div class="header-content">
      <h1 class="dashboard-title">
        üéõÔ∏è Admin Dashboard
      </h1>
      <p class="dashboard-subtitle">
        Welcome back, <strong><%= @current_admin.email %></strong>!
      </p>
    </div>
    
    <div class="header-actions">
      <%= link_to "üö™ Logout", admin_logout_path, 
            data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to logout?" },
            class: "btn btn-secondary" %>
    </div>
  </div>
  
  <div class="dashboard-stats">
    <h2 class="stats-title">üìä Blog Statistics</h2>
    
    <div class="stats-grid">
      <div class="stat-card">
        <div class="stat-icon">üë•</div>
        <div class="stat-content">
          <div class="stat-number"><%= @total_users %></div>
          <div class="stat-label">Total Users</div>
        </div>
      </div>
      
      <div class="stat-card">
        <div class="stat-icon">üõ°Ô∏è</div>
        <div class="stat-content">
          <div class="stat-number"><%= @admin_users %></div>
          <div class="stat-label">Admin Users</div>
        </div>
      </div>
      
      <div class="stat-card future-feature">
        <div class="stat-icon">üìù</div>
        <div class="stat-content">
          <div class="stat-number"><%= @total_posts %></div>
          <div class="stat-label">Total Posts</div>
          <small class="stat-note">Phase 4 Feature</small>
        </div>
      </div>
      
      <div class="stat-card future-feature">
        <div class="stat-icon">‚úÖ</div>
        <div class="stat-content">
          <div class="stat-number"><%= @published_posts %></div>
          <div class="stat-label">Published Posts</div>
          <small class="stat-note">Phase 4 Feature</small>
        </div>
      </div>
    </div>
  </div>
  
  <div class="dashboard-actions">
    <h2 class="actions-title">‚ö° Quick Actions</h2>
    
    <div class="actions-grid">
      <div class="action-card future-feature">
        <div class="action-icon">‚úèÔ∏è</div>
        <h3 class="action-title">Create New Post</h3>
        <p class="action-description">
          Write and publish new blog posts
        </p>
        <button class="btn btn-primary" disabled>
          Coming in Phase 4
        </button>
      </div>
      
      <div class="action-card future-feature">
        <div class="action-icon">üìã</div>
        <h3 class="action-title">Manage Posts</h3>
        <p class="action-description">
          Edit, delete, and organize blog posts
        </p>
        <button class="btn btn-primary" disabled>
          Coming in Phase 4
        </button>
      </div>
      
      <div class="action-card">
        <div class="action-icon">üè†</div>
        <h3 class="action-title">View Public Site</h3>
        <p class="action-description">
          See your blog as visitors see it
        </p>
        <%= link_to "Visit Home Page", root_path, class: "btn btn-primary", target: "_blank" %>
      </div>
      
      <div class="action-card">
        <div class="action-icon">üìñ</div>
        <h3 class="action-title">View Blog</h3>
        <p class="action-description">
          Check the public blog interface
        </p>
        <%= link_to "View Blog", blog_path, class: "btn btn-primary", target: "_blank" %>
      </div>
    </div>
  </div>
  
  <div class="dashboard-progress">
    <h2 class="progress-title">üéØ Tutorial Progress</h2>
    
    <div class="progress-content">
      <div class="current-phase">
        <h3 class="phase-title">Current Phase</h3>
        <div class="phase-badge phase-current">
          <%= @tutorial_phase %>
        </div>
        <p class="phase-description">
          ‚úÖ Admin authentication system completed!
        </p>
      </div>
      
      <div class="next-phase">
        <h3 class="phase-title">Next Phase</h3>
        <div class="phase-badge phase-next">
          <%= @next_phase %>
        </div>
        <p class="phase-description">
          üöÄ Ready to build blog post CRUD operations
        </p>
      </div>
    </div>
  </div>
  
  <div class="dashboard-system">
    <h2 class="system-title">‚öôÔ∏è System Information</h2>
    
    <div class="system-grid">
      <div class="system-item">
        <strong>Rails Version:</strong> 8.0.2
      </div>
      <div class="system-item">
        <strong>Ruby Version:</strong> 3.4.4
      </div>
      <div class="system-item">
        <strong>Authentication:</strong> has_secure_password
      </div>
      <div class="system-item">
        <strong>Database:</strong> SQLite3 (development)
      </div>
    </div>
  </div>
  
</div>

