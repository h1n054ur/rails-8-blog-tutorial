<% content_for :title, "Admin Login - Rails 8 Tutorial Blog" %>

<div class="admin-login-container">
  
  <div class="admin-header">
    <h1 class="admin-title">
      üîê Admin Login
    </h1>
    <p class="admin-subtitle">
      Access the Rails 8 Tutorial Blog administration panel
    </p>
  </div>

  <%= form_with url: admin_login_path, local: true, class: "admin-login-form" do |form| %>
    
    <div class="form-group">
      <%= form.label :email, "Email Address", class: "form-label" %>
      
      <%= form.email_field :email, 
            class: "form-input", 
            placeholder: "admin@example.com",
            required: true,
            autofocus: true %>
      
      <small class="form-help">
        üìù Tutorial credentials: admin@example.com
      </small>
    </div>
    
    <div class="form-group">
      <%= form.label :password, "Password", class: "form-label" %>
      
      <%= form.password_field :password, 
            class: "form-input", 
            placeholder: "Enter your password",
            required: true %>
      
      <small class="form-help">
        üîë Tutorial password: password123
      </small>
    </div>
    
    <div class="form-group">
      <%= form.submit "üöÄ Login to Admin Panel", class: "btn btn-primary btn-login" %>
    </div>
    
  <% end %>
  
  <div class="admin-navigation">
    <%= link_to "‚Üê Back to Home", root_path, class: "btn btn-secondary" %>
    <%= link_to "üìù View Blog", blog_path, class: "btn btn-secondary" %>
  </div>
  
  <div class="admin-info">
    <h3 class="info-title">üéì Learning Focus</h3>
    <div class="info-content">
      <p><strong>Rails Concepts in This Form:</strong></p>
      <ul class="concept-list">
        <li><strong>form_with</strong>: Rails 5+ form helper with security</li>
        <li><strong>CSRF Protection</strong>: Automatic security token inclusion</li>
        <li><strong>Route Helpers</strong>: admin_login_path for clean URLs</li>
        <li><strong>Flash Messages</strong>: User feedback system integration</li>
        <li><strong>HTML5 Validation</strong>: Browser-side form validation</li>
      </ul>
      
      <p><strong>Security Features:</strong></p>
      <ul class="security-list">
        <li>üõ°Ô∏è CSRF token prevents cross-site request forgery</li>
        <li>üîí Password field hides input characters</li>
        <li>‚úÖ HTML5 required attributes ensure data presence</li>
        <li>üéØ Secure form submission to protected endpoint</li>
      </ul>
    </div>
  </div>
  
</div>

